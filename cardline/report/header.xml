<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="report_saleorder_document_profoma">
        <div class="header m-0 p-0" style="border:2px solid black">
            <table class="table m-0 p-0" style="width:100%;margin-bottom:0;">
                <tr>
                    <div class="row" style="margin-left:2px;width:100%">
                        <div class="col-3 m-0 p-0" style="margin-left:0%;width:24%">

                        </div>

                        <div class="text-left" style="margin-top:1px;word-wrap: break-word !important;width:51%">
                            <div>
                                <span class="m-0 p-0" style="text-align:left;margin-left:21px;font-size:19px;">
                                    <strong><span t-field="o.company_id.name"/></strong>
                                </span>
                            </div>
                            <div style="line-height:100%">
                                <b><span style="font-size:13px">Registered Address :</span></b>
                                <span class="m-0 p-0" style="font-size:13px;text-align:left;margin-left:21px;" t-field="o.company_id.street"/>
                                <span class="m-0 p-0" style="font-size:13px;margin-left:21px" t-field="o.company_id.street2"/><br/>
                                <span class="m-0 p-0" style="text-transform:uppercase;font-size:13px;text-align:left;margin-left:21px" t-field="o.company_id.city"/>-
                                <span class="m-0 p-0" style="text-transform:uppercase;font-size:13px;text-align:left;margin-left:21px" t-field="o.company_id.zip"/>,
                                <span class="m-0 p-0" style="text-transform:uppercase;font-size:13px;text-align:left;margin-left:21px" t-field=" o.company_id.state_id"/>
                                <span class="m-0 p-0" style="text-transform:uppercase;font-size:13px;text-align:left;margin-left:21px" t-field=" o.company_id.country_id"/>
                            </div>

                            <div style="line-height:100%">
                                <t class="text-center">
                                    <strong class="m-0 p-0" style="font-size:14px"><span>TRN :</span></strong>
                                    <span style="font-size:14px;margin-left:11px" t-field="o.company_id.vat"/><br/>

                                </t> 
                            </div>
                        </div>
                        <div style="text-align:center !important;width:25%;">



                        </div>
                    </div>
                </tr>    
              
                <tr>
                    <td  colspan="3" style="border-top:2px solid black;text-align:center;">
                        <div style="line-height:100%">
                            <strong style="font-size:18px">PROFOMA INVOICE</strong>

                        </div>
                        <div style="line-height:100%">
                            <b class="m-0 p-0" style="font-size:14px;">

                        </b> 

                        </div>
                        
                     
                    </td>
                </tr>
                <tr>
                    <td style="border-top:2px solid black;border-right:2px solid black;width:52%;padding:10px;line-height:120%">
                        <strong style="font-size:15px;">Billed to : </strong>
                            <br/>
                            <strong style="font-size:15px"><span t-if="o.partner_id.name" t-field="o.partner_id.name"/></strong><br/>
                            <span  style="font-size:13px" t-if="o.partner_id.street" t-field="o.partner_id.street"/>,
                            <span style="font-size:13px" t-if="o.partner_id.street2" t-field="o.partner_id.street2"/><br/>
                            <span style="font-size:13px" t-if="o.partner_id.city" t-field="o.partner_id.city"/>
                            <span style="font-size:13px" t-if="o.partner_id.state_id" t-field="o.partner_id.state_id"/>
                            <span style="font-size:13px" t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
                            <span style="font-size:13px" t-if="o.partner_id.country_id" t-field="o.partner_id.country_id"/><br/>
                            <t t-if="o.partner_id.vat">
                                <strong style="font-size:14px;">TRN :
                                <span t-field="o.partner_id.vat"/>
                                </strong>
                            </t>
                    </td>
                    <td style="width:46%;padding:10px">
                        <div class="row">
                            <div class="col-4" style="text-align:left;font-size:13px;">
                                <span style="font-size:13px;">Invoice No : </span><br/>
                                <span style="font-size:13px;">Invoice Date : </span><br/>
                                <span style="font-size:13px">SO Number :</span><br/>
                                <span style="font-size:13px;"> Payment Terms : </span><br/>

                                
                            </div>
                            <div class="col-7" style="text-align:left;font-size:13px;">
                                <span style="font-size:13px" t-field="o.name"/><br/>


                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="border-top:2px solid black;font-size:13px;width:52%">
                        <strong style="font-size:15px;">Shipped to : </strong>
                        <br/>
                       <strong> <span  style="font-size:15px" t-if="o.partner_shipping_id.name" t-field="o.partner_shipping_id.name"/></strong><br/>
                        <span style="font-size:13px;" t-if="o.partner_shipping_id.street" t-field="o.partner_shipping_id.street"/>,
                        <span style="font-size:13px;" t-if="o.partner_shipping_id.street2" t-field="o.partner_shipping_id.street2"/><br/>
                        <span style="font-size:13px;" t-if="o.partner_shipping_id.city" t-field="o.partner_shipping_id.city"/>
                        <span  style="font-size:13px;" t-if="o.partner_shipping_id.state_id" t-field="o.partner_shipping_id.state_id"/>
                        <span style="font-size:13px;" t-if="o.partner_shipping_id.zip" t-field="o.partner_shipping_id.zip"/>
                        <span style="font-size:13px;" t-if="o.partner_shipping_id.country_id" t-field="o.partner_shipping_id.country_id"/><br/>
                        <t t-if="o.partner_shipping_id.vat">
                            <strong style="font-size:14px;">TRN :
                            <span t-field="o.partner_shipping_id.vat"/>
                            </strong>
                        </t>
                    </td>
                    <td style="border-top:2px solid black;font-size:13px;width:46%;padding:10px">
                        
                    </td>
                </tr>
            </table>
        </div>
        <div class="article o_report_layout_standard"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div class="footer o_standard_footer">
            <table class="table table-borderless " style="width:100%;">    
                    
                <tbody>
                    <tr class="m-0 p-0">
   

                       <td style="width:20%">

                       </td>
                       <td style="width:40%">

                       </td>
                        <td class="m-1 p-1" style="width:40%;text-align:center;font-size:12px;">
                            <strong style="text-align:center">For</strong><br/>
                               <strong style="text-align:center"><span style="padding-left:2px;" t-field="o.company_id.name"/></strong>
                            
                            <strong><p style="padding-top:12%;text-align:center">Authorized Signatory</p></strong>
                        </td>
                    </tr>
                   

                    

                   
                </tbody>    
            </table>  
            <div class="row">
                            
                <div class="col-12" style="text-align:center;font-size:13px;">
                                         
                    <small style="font-size:12px;">
                        <span>Page</span>
                        <span class="page" />
                            of
                        <span class="topage" />
                    </small>
                                             
                </div>
                                
            </div>
        </div>

        

        
    </template>
</data>

</odoo>
