<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchase_order_document_inherit" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t/t[@t-set='address']" position="replace">
                <h2 style="text-align:center;font-size:20px;color:#27B3CB;" t-if="o.state in ['draft', 'sent', 'to approve']">Request for Quotation #<span style="color:black;" t-field="o.name"/></h2>
                <h2 style="text-align:center;font-size:20px;color:#27B3CB;" t-if="o.state in ['purchase', 'done']">Purchase Order #<span style="color:black;" t-field="o.name"/></h2>
                <h2 style="text-align:center;font-size:20px;color:#27B3CB;" t-if="o.state == 'cancel'">Cancelled Purchase Order #<span style="color:black;" t-field="o.name"/></h2>

                <table style="color: black; background: white; width:100%;border: white;">
                    <tr style="font-size:15px; color: black; background: white;">
                        <td width="50%"
                            style="margin-right:40%;font-size:15px;color: black; background: white;border: white;">
                            <h2 class="oe_highlight">
                                <p style="color:#27B3CB ">
                                    <strong>
                                        Supplier Name
                                    </strong>
                                </p>
                            </h2>
                            <t t-esc="o.partner_id.name"/>
                            <br></br>
                            <t t-esc="o.partner_id.street"/>
                            <br></br>
                            <t t-esc="o.partner_id.street2"/>
                            <br></br>
                            <t t-esc="o.partner_id.city"/>
                            <!--                        <t t-esc="doc.company_id.zip"/>-->
                            <t t-esc="o.partner_id.country_id.name"/>
                        </td>
                        <td style="color: black;margin-left:80%; background: white;font-size:15px;padding-left:20%;border: white;">
                            <strong style="color:#27B3CB;">PO Number
                                <span style="padding-left:18px;"></span>:
                            </strong>
                            <t t-esc="o.name"/>
                            <br></br>
                            <strong style="color:#27B3CB;">PO Date
                                <span style="padding-left:40px;"></span>:
                            </strong>
                                                            <t t-esc="o.date_approve"/>
                            <br></br>
                            <strong style="color:#27B3CB;">Due Date
                                <span style="padding-left:34px;"></span>:
                            </strong>
                                                            <t t-esc="o.date_planned"/>
                            <br></br>
                            <strong style="color:#27B3CB;">PO Reference
                                <span style="padding-left:4px;"></span>:
                            </strong>
                            <t t-esc="o.partner_ref"/>
                        </td>
                    </tr>
                </table>
            </xpath>
                        <xpath expr="//t/div/div[@class='mt-4']" position="replace">
                            </xpath>
            <xpath expr="//t/div/div[@class='row mt-4 mb32']" position="replace">
                            </xpath>



        </template>
    </data>
</odoo>