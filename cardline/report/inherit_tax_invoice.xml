<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tax_invoice_form_inherit1" model="ir.ui.view">
            <field name="name">tax.invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group/group/field[@name='invoice_user_id']" position="after">
                    <field name="exchange_rate"/>
                    <field name="currency">
                    </field>
                </xpath>
            </field>
        </record>


        <template id="report_tax_invoice_document_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='col-auto col-3 mw-100 mb-2']" position="replace">
                <br>
                    <div colspan='6' class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date"
                         style="margin-left:50%; text-align: end; ">
                        <div colspan='6' class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin"
                             style="margin-left:80%;text-align: start;white-space: nowrap;">
                            <table>
                            </table>
                            <br>
                            </br>
                        </div>
                    </div>
                </br>
            </xpath>
            <xpath expr="//t/div/div/div/div[@name='due_date']" position="replace">
            </xpath>

<!--            _______uom and taxable amount_______-->
            <xpath expr="//t/div/div/table/thead/tr/th[@name='th_description']" position="after">
                <th ><span>UOM</span></th>

            </xpath>
                        <xpath expr="//t/div/div/table/tbody/t/tr/t/td[@name='account_invoice_line_name']" position="after">
                            <td><span t-field="line.uom"/></td>
                        </xpath>

                        <xpath expr="//t/div/div/table/thead/tr/th[@name='th_priceunit']" position="after">
                                                <th ><span>TAXABLE AMOUNT</span></th>
                        </xpath>
             <xpath expr="//t/div/div/table/tbody/t/tr/t/td[@t-if='display_discount']" position="before">
                            <td style="text-align:right;" ><span  t-field="line.taxable_amount"/></td>
                        </xpath>









            <xpath expr="//t/div/div/div/div[@name='origin']" position="replace">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                </div>
            </xpath>
            <xpath expr="//t/div/div[@name='payment_term']" position="replace">
                <div t-if='o.show_payment_term_details' id="total_payment_term_details_table" class="row">
                </div>
            </xpath>
            <xpath expr="//t/div/p[@name='payment_communication']" position="before">
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
            </xpath>

            <xpath expr="//t/div/p[@name='payment_communication']" position="after">
                <div>
<!--                    <br></br>-->
                    <td colspan="6"
                        style="width:40%;border-top:1px black solid;boder-left:1px solid black;border-right:2px solid black;border-bottom:1px solid black;font-size:13px">
                        <b>
                            <u>Bank Details</u>
                        </b>
                        <br/>
                        <span>Account Name
                            <span style="padding-left:10px;"></span>:Cardline Electronics llc
                        </span>
<!--                        <span t-field="Cardline Electronics llc"/>-->
                        <br/>

                        <span>Account No
                            <span style="padding-left:30px;"></span>:10484461020001
                        </span>
                        <!--                        <span t-field="o.partner_bank_id.acc_number"/>-->
                        <br/>
                        <span>IBAN Number
                            <span style="padding-left:14px;"></span>:AE240030010484461020001
                        </span>
                        <br/>
                        <span>Bank Name
                            <span style="padding-left:33px;"></span>:ADCB (Abudhabi Commercial Bank)
                        </span>
                        <br/>
                        <span>Swift Code
                            <span style="padding-left:36px;"></span>:ADCBAEAA.
                        </span>
                        <br/>
                        <!--                        <sapn t-field="o.partner_bank_id.bank_id.bic"/>-->

                    </td>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <u></u>
                    <tr>
                        <p style="text-decoration:overline;padding-left:10%;">Receiver's Signature<span
                                style="padding-left:45%;"></span>For CARDLINE ELETRONICS LLC
                        </p>

                    </tr>

                </div>
            </xpath>


            <xpath expr="//t/div/div/h2" position="replace">
                        <h2>
                        </h2>
            </xpath>


            <xpath expr="//t/div/t/div[@name='address_same_as_shipping']" position="replace">
                <div t-if="o.partner_id.vat" class="oe_highlight">
                    <h2 style="text-align:center;font-size:25px;">
                            <strong style="color:black;" t-if="o.move_type == 'out_invoice' and o.state == 'posted'">TAX INVOICE</strong>
                            <strong style="color:black;" t-if="o.move_type == 'out_invoice' and o.state == 'draft'">DRAFT INVOICE</strong>
                            <strong style="color:black;" t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">CANCELLED INVOICE</strong>
                            <strong style="color:black;" t-if="o.move_type == 'out_refund'">CREDIT NOTE</strong>
                            <strong style="color:black;" t-if="o.move_type == 'in_refund'">VENDOR CREDIT NOTE</strong>
                            <strong style="color:black;" t-if="o.move_type == 'in_invoice'">VENDOR BILL</strong>
<!--                            <span t-if="o.name != '/'" t-field="o.name"/>-->
                         <br/>
                        <h style="font-size:15px;">TRN:</h>
                    <span style="color: black;font-size:15px;" t-esc="o.partner_id.vat"/>
                        </h2>


                    <table style="color: black; background: white; width:100%;border: white;">
                    <tr style="font-size:15px; color: black; background: white;">
                        <td width="50%"  style="margin-right:40%;font-size:15px;color: black; background: white;border: white;">
                             <h2 class="oe_highlight">
                            <p style="color:#27B3CB ">
                                <strong>
                                    Bill To
                                </strong>
                            </p>
                        </h2>
                            <t t-esc="o.partner_id.name"/>
                            <br></br>
                            <t t-esc="o.partner_id.street"/>
                            <br></br>
                            <t t-esc="o.partner_id.street2"/>
                            <br></br>
                            <t t-esc="o.partner_id.city"/>
                            <!--                        <t t-esc="doc.company_id.zip"/>-->
                            <t t-esc="o.partner_id.country_id.name"/>
                        </td>
                        <td style="color: black;margin-left:80%; background: white;font-size:15px;padding-left:150px;border: white;">
                                <strong style="color:#27B3CB;">Invoice No
                                    <span style="padding-left:50px;"></span>:
                                </strong>
                                <t t-esc="o.name"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Invoice Date
                                    <span style="padding-left:38px;"></span>:
                                </strong>
                                <t t-esc="o.invoice_date"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Due Date
                                    <span style="padding-left:60px;"></span>:
                                </strong>
                                <t t-esc="o.invoice_date_due"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Source
                                    <span style="padding-left:77px;"></span>:
                                </strong>
                                <t t-esc="o.invoice_origin"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Payment Terms
                                    <span style="padding-left:17px;"></span>:
                                </strong>
                                <t t-esc="o.invoice_payment_term_id.name"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Reference
                                    <span style="padding-left:55px;"></span>:
                                </strong>
                                <t t-esc="o.payment_reference"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Exchange Rate
                                    <span style="padding-left:25px;"></span>:
                                </strong>
                                <t t-esc="o.exchange_rate"/>
                                <br></br>
                                <strong style="color:#27B3CB;">Currency
                                    <span style="padding-left:62px;"></span>:
                                </strong>
                                <t t-esc="o.currency"/>
                        </td>
                    </tr>
                    </table>
                </div>
            </xpath>
        </template>
    
    </data>
</odoo>