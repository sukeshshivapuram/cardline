<odoo>

    <template id="delivery_challan_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report_inventory.report_delivery_challan_document" t-lang="doc.partner_id.name"/>
            </t>
        </t>
    </template>

    <template id="report_delivery_challan_document">

        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />

	        <div class="footer" style="text-align:right;">
	            Page <span class="page"/> of <span class="topage"/>
	        </div>  

            <div class="page">
                <style type="text/css">
	                .table, tr,td{
	                  border: 1px solid black;
	                  padding:1px;
	                  font-size:15px; 
	                }

	                table, th, td {
	                border: 1px solid black;
	                border-collapse: collapse;
	                }

	                th, td {
	                padding: 6px;
	                }
                </style>

                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-6">
                        <table cellpadding="0" cellspacing="0" width="100%">
                        	<tr>
                                <td colspan="6" style="text-align:center;" height="35" width="45%">
                                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 100px;" alt="Logo"/>
                                </td>
                            </tr>

	                        <tr>
                            	<td colspan="6" width="100%" style="text-align:center;font-size: 18px; border-top :hidden;font-weight:bold;">DELIVERY CHALLAN</td>
                            </tr>

                            <tr>
                                <td colspan="2" width="50%">
                                    <span>
                                        <b> No.
                                            <t t-esc="doc.name"/>
                                        </b>
                                    </span>
                                </td>

                                <td colspan="4" width="50%">
                                    <span>
                                        <b style="text-align:left">Date:</b>
                                        <t t-esc="doc.scheduled_date.strftime('%d-%b-%Y')"/>
                                    </span>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="2" width='50%'>
                                    <b>To:</b>
                                    <br/>
                                    <t t-if="">
                                    	<b><t t-esc=""/> <t t-esc=""/></b>
                                    </t>
                                    <t t-else="">
	                                    <b><t t-esc="doc.partner_id.name"/></b>
	                                </t><br/>
                                    <div t-field="doc.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "fax"], "no_marker": True, }'/>

                                    <t t-if="doc.partner_id.phone">
	                                    <b>Phone: </b><t t-esc="doc.partner_id.phone"/><br/>
	                                </t>

                                    <t t-if="doc.partner_id.mobile">
	                                    <b>Mobile: </b><t t-esc="doc.partner_id.mobile"/>
	                                </t>
                                </td>

                                <td colspan="4" width="50%">
                                        <span><b>Sale order No : </b><t t-esc="doc.origin"/></span>
                                        <br></br>
                                        <br></br>
                                        <span><b>Invoice No : </b><t t-esc="doc.partner_id.vat"/></span>
                                </td>
                            </tr>
                            <tr>
                                <th style="width:5%;">SI.<br/>No.</th>
                                <th style="width:45%;">PARTICULARS</th>
                                <th style="width:12.5%;">QTY</th>
                                <th style="width:12.5%;">Rate</th>
                            </tr>

                            <tr t-foreach="(doc.move_ids_without_package)" t-as="l">
                                <td colspan="1" style="width:5%;text-align: center;border-bottom: hidden;">
                                    <span t-esc="l_index+1"/>
                                </td>

                                <td colspan="1" style="width:60%;text-align: left;border-bottom: hidden;">
                                    <span t-field="l.name"/>
                                </td>

                                <td colspan="1" style="width:17%;text-align: center;border-bottom: hidden;">
                                    <t t-esc="l.product_uom.name"/>
                                </td>

                                <td colspan="1" style="width:23%;text-align: center;border-bottom: hidden;">
                                    <t t-esc="l.price_unit"/>
                                </td>
                                <br/>
                            </tr>

                            <tr>
                            	<td colspan="1" style="width:5%;"></td>
                                <td colspan="1" style="width:45%;">
                                    <t t-if="">"
                                        Approx. Value Rs.<t t-esc=""/>/-
                                    </t>
                                </td>
                            	<td colspan="1" style="width:12.5%;"></td>
                            	<td colspan="1" style="width:12.5%;"></td>
                            </tr>
                            <tr>
                            	<td colspan="6" style="padding-left: 45px;">Kindly receive the above materials &amp; acknowledge the same</td>
                            </tr>

                            <tr>
                            	<td colspan="6" style="padding-left: 450px;border-top:hidden;text-align:right" height="40">For <t t-esc="doc.company_id.name"/>.,</td><br/><br/><br/><br/>
                            </tr>

                            <tr>
                                <td colspan="2" width="50%" style="padding-left: 50px;border-top:hidden;height:50px">
                                    <span>Reciever's Signature</span><br/><br/><br/>
                                </td>

                                <td colspan="2" width="50%" style="padding-left: 60px;border-top:hidden;text-align:right;border-left: hidden;height:170px">
                                    <span>Authorised Signatory</span><br/><br/><br/>
                                </td>
                            </tr>

                            <tr>
                            	<td colspan="6" style="border-top:hidden;padding-left: 50px;">
					                <div>
					                    <t t-if="doc.company_id.name" style="font-size:15px; font-weight:bold;">
					                        <b>
					                            <span t-field="doc.company_id.name"/>
					                        </b>
					                        <br/>
					                    </t>
					                    <t t-if="doc.company_id.street">
					                        <span t-field="doc.company_id.street"/>
					                        <span t-field="doc.company_id.street2"/>
					                        <span t-field="doc.company_id.city"/>
					                        <span t-field="doc.company_id.zip"/>
					                        <span t-field="doc.company_id.country_id"/>
					                    </t>
					                    <t t-if="doc.company_id.city or doc.company_id.country_id or doc.company_id.zip ">
                                            <br/><span t-field="doc.company_id.street2"/><br/>
					                        <span t-field="doc.company_id.city"/>
                                            <span t-field="doc.company_id.country_id"/><br/>
					                    </t>
					                    <t t-if="doc.company_id.phone">
					                        <b>Phone :</b>
					                        <span t-field="doc.company_id.phone"/>
					                        <br/>
					                    </t>
					                    <t t-if="doc.company_id.email">
					                        <b>Email :</b>
					                        <span t-field="doc.company_id.email"/>
					                        <span>|</span>
					                    </t>
					                </div>
						        </td>
	                        </tr>
	                    </table>

	                    <table width="100%" height="50">
	                        <tr>
	                        	<td colspan="6" width="96.7%" style="text-align: center;height:20;position:absolute;color:#FFF;font-weight:700;background-color:#1f3a93;border:hidden;">
				                    <t t-esc="doc.company_id.website"/>
				                </td>	                        
				            </tr>
	                    </table>
	                </div>
	            </div>
	        </div>
    </template>
</odoo>

