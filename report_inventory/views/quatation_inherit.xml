<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="quotation_order_inherit_report_template" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t/div/table/thead/tr/th[@name='th_description']" position="before">
            <th name="th_code" class="text-start">Code</th>
        </xpath>
        <xpath expr ="//t/div/table/tbody/t/tr/t/td" position="before">
                <td name="td_code" class="text-start">
                    <span t-esc="line.product_id.default_code"/>
                </td>
        </xpath>
        <xpath expr="//t/div/table/tbody/t/tr/t/td[@name='td_name']" position="replace">
            <td class="text-start">
                    <span t-esc="line.product_id.name"/>
            </td>
        </xpath>

    </template>
</odoo>