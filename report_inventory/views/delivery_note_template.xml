<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="paperformat_delivery_note_format" model="report.paperformat">
            <field name="name">A4</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_delivery_note" model="ir.actions.report">
            <field name="name">Delivery Note</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_inventory.delivery_note_template</field>
            <field name="report_file">report_inventory.delivery_note_template</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_inventory.paperformat_delivery_note_format"/>
        </record>


        <template id="delivery_note_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <h1 style="text-align: center; height:50px;font-size:40px">Delivery Note</h1>
                        <br/>
                        <br/>
                        <br/>
                        <div class="page">
                            <div>
                                <div class="row">
                                    <div class="column" style="width:50%">
                                        <table style="width:60%">
                                            <tr style="border:2px solid black;">
                                                <th style="border:2px solid black; color: black; background: grey;font-size: 20px;">
                                                    Customer
                                                </th>
                                            </tr>
                                            <tr style="border:2px solid black; height: 130px;">
                                                <td style="border:2px solid black;color: black;font-size: 15px; color: black; background: white">
                                                    <span t-esc="o.partner_id.name"/>
                                                </td>
                                            </tr>

                                        </table>
                                    </div>

                                    <div class="column" style="width:50%">
                                        <table style="width:100%;">
                                            <tr style="border:2px solid:black; height: 30px;">
                                                <!--                                                <td>.</td>-->
                                                <td style=" border:2px solid black;font-size: 20px; width: 25%; text-align: center;">
                                                    DN No.
                                                </td>
                                                <td style="border:2px solid black; width: 41%; text-align: center;font-size: 15px">
                                                    <span t-esc="o.name"/>
                                                </td>
                                            </tr>
                                            <tr style="border:2px solid:black; height: 30px;">
                                                <!--                                                <td></td>-->
                                                <td style=" border:2px solid black;font-size: 20px; width: 25%; text-align: center;">
                                                    Invoice No.
                                                </td>
                                                <td style="border:2px solid black; width: 41%; text-align: center;font-size: 15px">
                                                    <span t-esc="o.origin"/>
                                                </td>
                                            </tr>
                                            <tr style="border:2px solid:black; height: 30px;">
                                                <!--                                                <td></td>-->
                                                <td style=" border:2px solid black;font-size: 20px; width: 25%; text-align: center;">
                                                    Date
                                                </td>
                                                <td style="border:2px solid black; width: 41%; text-align: center;font-size: 15px">
                                                    <span t-esc="o.scheduled_date"/>
                                                </td>
                                            </tr>
                                            <tr style="border:2px solid:black; height: 30px;">
                                                <!--                                                <td></td>-->
                                                <td style=" border:2px solid black;font-size: 20px; width: 25%; text-align: center;color: black; background: white">
                                                    Reference
                                                </td>
                                                <td style="border:2px solid black; width: 41%;color: black; background: white;font-size: 15px">
                                                    1
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="column" style="width:100%">
                                        <table style="width:100%">
                                            <tr style="border:2px solid black;">
                                                <th style="border:2px solid black;color: white; background: grey; font-size: 20px;text-align: center">
                                                    Item
                                                </th>
                                                <th style="border:2px solid black; color: white; background: grey; font-size: 20px;text-align: center">
                                                    Description
                                                </th>
                                                <th style="border:2px solid black; color: white; background: grey; font-size: 20px;text-align: center">
                                                    Qty
                                                </th>
                                            </tr>
                                            <t t-foreach="o.move_ids_without_package" t-as="line">
                                                <tr style="border:2px solid:black height:100px; height: 100px;">
                                                    <td style=" border:2px solid black;color: black; font-size: 15px;background: white;width:60%">
                                                        <span t-esc="line.product_id.name"/>
                                                    </td>
                                                    <td style="border:2px solid black;color: black;font-size: 15px; background: white;width:20%%">
                                                        <span t-esc="line.product_id.name"/>
                                                    </td>
                                                    <td style="border:2px solid black;color: black;font-size: 15px; background: white;width:20%">
                                                        <span t-esc="line.product_uom_qty"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </table>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="column" style="width:50%">
                                        <table style="width:200%; height:140px">
                                            <tr style="border:1px solid black;">
                                                <td style="border:2px solid black;color: black;font-size: 15px; background: white">
                                                </td>
                                            </tr>

                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="column" style="width:50%">
                                <table style="width:50%">
                                            <p style="text-align: left; color: black;font-size:15px; background: white">
                                                Customer Acceptance &amp; seal
                                            </p>
                                </table>
                            </div>
                            <div class="column" style="width:50%">
                                <table style="width:100%">
                                        <p style="text-align: center; color: black; background: white;font-size:15px;border: 0px solid;">
                                            Authorized Signature for Cardline
                                        </p>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>