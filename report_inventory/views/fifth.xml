<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="paperformat_quotation_format" model="report.paperformat">
            <field name="name">A4</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="fifth_model_report_new" model="ir.actions.report">
            <field name="name">Quotation</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_inventory.fifth_report</field>
            <field name="report_file">report_inventory.fifth_report</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_inventory.paperformat_quotation_format"/>
        </record>

        <template id="fifth_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <h1 style="text-align: center; height:50px; font-size: 40px;">Quotation</h1>

                        <br/>
                        <br/>
                        <div class="page">
                            <div>
                                <div class="row">
                                    <div class="column" style="width:50%">
                                        <table style="width:80%">
                                            <tr>
                                                <th style="border:1px solid black; color: white; background: grey; font-size: 20px;">
                                                    Customer:
                                                </th>
                                            </tr>
                                            <tr style="border:1px solid black; height: 130px;">
                                                <td style="color: black; background: white;">
                                                    <span t-esc="o.partner_id.name"/>
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                    <div class="column" style="width:50%">
                                        <table style="width:87%;margin-left:65px;">
                                            <tr style="border:1px solid:black; height: 30px;">
                                                <td style=" border:1px solid black; width: 10%; text-align: center; font-size: 20px;">
                                                    Quote No
                                                </td>
                                                <td style="border:1px solid black; width: 15%; text-align: center;font-size: 15px">
                                                    <span t-esc="o.name"/>
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 30px;">
                                                <td style=" border:1px solid black; width: 15%; text-align: center; font-size: 20px;">
                                                    Quote Date
                                                </td>
                                                <td style="border:1px solid black; width: 8%; text-align: center; font-size: 15px;">
                                                    <span t-esc="o.date_order"/>
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 30px;">

                                                <td style=" border:1px solid black; width: 15%; text-align: center; font-size: 20px;">
                                                    Quote Valid Till
                                                </td>
                                                <td style="border:1px solid black; width: 8%; text-align: center;font-size: 15px;">
                                                    <span t-esc="o.validity_date"/>
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 30px;">

                                                <td style=" border:1px solid black; width: 10%; text-align: center;font-size: 20px;">
                                                    Terms
                                                </td>
                                                <td style="border:1px solid black; width: 15%;font-size: 15px">
                                                    <span t-esc="o.payment_term_id.name"/>
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 30px;">

                                                <td style=" border:1px solid black; width: 10%; text-align: center;font-size: 20px;color: grey; background: white;">
                                                    Reference
                                                </td>
                                                <td style="border:1px solid black; width: 15%;color: grey; background: white;font-size: 15px">
                                                    <span t-esc="o.client_order_ref"/>
                                                </td>
                                            </tr>

                                        </table>
                                    </div>
                                    </div>
                                    <br/>
                                    <div class="row">
                                        <div class="column" style="width:100%">
                                                <table style="width:100%">
                                                    <tr>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center; width:15%; font-size: 20px;">
                                                            Code
                                                        </th>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center; width:30%; font-size: 20px;">
                                                            Description
                                                        </th>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center; width:13%; font-size: 20px;">
                                                            Qty
                                                        </th>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center;width:12%;font-size: 20px;">
                                                            Rate
                                                        </th>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center; width:13%;font-size: 20px;">
                                                            Taxes
                                                        </th>
                                                        <th style="border:1px solid black; color: white; background: grey; text-align: center; width:15%;font-size: 20px;">
                                                            Amount
                                                        </th>

                                                    </tr>
                                                    <t t-foreach="o.order_line" t-as="lines">
                                                        <tr style="border:1px solid:black; height: 100px;">
                                                            <td style=" border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.product_id.default_code"/>
                                                            </td>
                                                            <td style="border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.product_id.name"/>
                                                            </td>
                                                            <td style="border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.product_uom_qty"/>
                                                            </td>
                                                            <td style=" border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.product_id.standard_price"/>
                                                            </td>
                                                            <td style="border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.product_id.taxes_id.name"/>
                                                            </td>
                                                            <td style="border:1px solid black;color: black; background: white;">
                                                                <span t-esc="lines.price_subtotal"/>
                                                            </td>

                                                        </tr>
                                                    </t>
                                                </table>
                                        </div>
                                    </div>

                                 <br/>
                                <div class="row">
                                    <div class="column" style="width:50%">
                                        <table style="width:85%; height:90px">
                                            <tr style="border:1px solid black;">
                                                <td style="border:1px solid black;color:black; background: white;"></td>
                                            </tr>

                                        </table>
                                    </div>
                                    <div class="column" style="width:50%">
                                        <table style="width:100%; height:100px;">
                                            <tr style="border:1px solid:black; height: 10px;">
                                                <!--                                                <td style="width: 35%;"></td>-->
                                                <td style="font-size: 15px;text-align: center;color: black; background: white;">SUB TOTAL</td>
                                                <td style="width: 35%; text-align: center; font-size: 15px;">AED
                                                    0.00
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 10px;">
                                                <!--                                                <td style="width: 35%;"></td>-->
                                                <td style="font-size: 15px;text-align: center;color: black; background: white;">VAT 5%</td>
                                                <td style="width: 35%; text-align: center; font-size: 15px;color: black; background: white;">AED
                                                    0.00
                                                </td>
                                            </tr>
                                            <tr style="border:1px solid:black; height: 10px; ">
                                                <!--                                                <td style="width: 45%;"></td>-->
                                                <td style="font-size: 15px;color: black; background: white;text-align: center;">
                                                    TOTAL
                                                </td>
                                                <td style="width: 35%; text-align: center;font-size: 15px;color: black; background: white;">
                                                    AED
                                                    0.00
                                                </td>
                                            </tr>


                                        </table>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </t>
                </t>
                </t>
        </template>

    </data>
</odoo>