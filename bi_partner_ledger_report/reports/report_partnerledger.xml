<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="bi_report_partnerledger">
        <t t-call="web.external_layout">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <center> <h2>Partner Ledger</h2> </center>
                <div class="row mt32 mb32" id="partner_header">
                    <div style="width:33.33%;">
                        <strong>Company:</strong>
                        <p t-esc="res_company.name"/>
                    </div>
                    <div style="width:33.33%;">
                        <t t-if="extra['date_from']">
                            <strong>Date from :</strong>
                            <span t-esc="extra['date_from']"/>
                            <br/>
                        </t>
                        <t t-if="extra['date_to']">
                            <strong>Date to :</strong>
                            <span t-esc="extra['date_to']"/>
                        </t>
                        <t t-if="extra['date_to']">
                            <strong>Period Length :</strong>
                            <span t-esc="extra['period_length']"/>
                        </t>

                    </div>
                    <div style="width:33.33%;">
                        <strong>Target Moves:</strong>
                        <p t-if="extra['target_move'] == 'all'">All Entries</p>
                        <p t-if="extra['target_move'] == 'posted'">All Posted Entries</p>
                    </div>
<!--                    <div style="width:25%;">-->
<!--                        <strong>Partner's:</strong>-->
<!--                        <p>-->
<!--                            <span t-if="extra['result_selection'] == 'customer'">Receivable Accounts</span>-->
<!--                            <span t-if="extra['result_selection'] == 'supplier'">Payable Accounts</span>-->
