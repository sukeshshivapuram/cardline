<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="bi_report_partnerledger">
        <t t-call="web.external_layout">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <center> <h2>Partner Ledger</h2> </center>
                <div class="row mt32 mb32" id="partner_header">
                    <div style="width:33.33%;">
                        <strong>Company:</strong>
                        <p t-esc="res_company.name"/>
                    </div>
                    <div style="width:33.33%;">
                        <t t-if="extra['date_from']">
                            <strong>Date from :</strong>
                            <span t-esc="extra['date_from']"/>
                            <br/>
                        </t>
                        <t t-if="extra['date_to']">
                            <strong>Date to :</strong>
                            <span t-esc="extra['date_to']"/>
                        </t>
                    </div>
                    <div style="width:33.33%;">
                        <strong>Target Moves:</strong>
                        <p t-if="extra['target_move'] == 'all'">All Entries</p>
                        <p t-if="extra['target_move'] == 'posted'">All Posted Entries</p>
                    </div>
                </div>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <table t-if="o.name == extra['customer_ids']" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>JRNL</th>
                                    <th>Account</th>
                                    <th>Ref</th>
                                    <th>Debit</th>
                                    <th>Credit</th>
                                    <th>Balance</th>
                                    <th t-if="extra['amount_currency']">Currency</th>
                                </tr>
                            </thead>

                            <tbody>
<!--                                <t t-if="o.name == extra['customer_ids']">-->
                                    <tr>
                                        <td colspan="4">
                                            <strong style="background:white;color:black" t-esc="o.ref"/>
                                            -
                                            <strong style="background:white;color:black" t-esc="o.name"/>
                                        </td>
                                        <td class="text-right">
                                            <strong style="background:white;color:black" t-esc="sum_partner(data, o, 'debit')"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <strong style="background:white;color:black" t-esc="sum_partner(data, o, 'credit')"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td style="background:white" class="text-right">
                                            <strong t-esc="sum_partner(data, o, 'debit - credit')"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr t-foreach="lines(data, o)" t-as="line">
                                        <td>
                                            <span style="background:white;color:black" t-esc="line['date']"/>
                                        </td>
                                        <td>
                                            <span style="background:white;color:black" t-esc="line['code']"/>
                                        </td>
                                        <td>
                                            <span style="background:white;color:black" t-esc="line['a_code']"/>
                                        </td>
                                        <td>
                                            <span style="background:white;color:black" t-esc="line['displayed_name']"/>
                                        </td>
                                        <td class="text-right">
                                            <span style="background:white;color:black" t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span style="background:white;color:black" t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td style="background:white" class="text-right">
                                            <span t-esc="line['progress']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right" t-if="extra['amount_currency']">
                                            <t t-if="line['currency_id']">
                                                <span t-esc="line['amount_currency']"
                                                      t-options="{'widget': 'monetary', 'display_currency': line['currency_id']}"/>
                                            </t>
                                        </td>
                                    </tr>
<!--                                </t>-->
                            </tbody>
                        </table>
                        <br/>
                    </div>

                    <div class="page">
                   <center> <h2>Aged Partner Balance</h2></center>

                    <div class="row mt32 mb32">
                        <div style="width:25%;">
                            <strong>Start Date:</strong>
                            <p t-esc="data['date_from']"/>
                        </div>
                        <div style="width:25%;">
                            <strong>Period Length (days)</strong>
                            <p t-esc="data['period_length']"/>
                        </div>
<!--                        <div style="width:25%;">-->
<!--                            <strong>Customer</strong>-->
<!--                            <p t-esc="data['partner_ids']"/>-->
<!--                        </div>-->
                        <div style="width:25%;">
                            <strong>Partner's:</strong>
                            <p>
                                <span t-if="data['result_selection'] == 'customer'">Receivable Accounts</span>
                                <span t-if="data['result_selection'] == 'supplier'">Payable Accounts</span>
                                <span t-if="data['result_selection'] == 'customer_supplier'">Receivable and Payable
                                    Accounts
                                </span>
                            </p>
                        </div>
                        <div style="width:25%;">
                            <strong>Target Moves:</strong>
                            <p>
                                <span t-if="data['target_move'] == 'all'">All Entries</span>
                                <span t-if="data['target_move'] == 'posted'">All Posted Entries</span>
                            </p>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Partners</th>
                                <th class="text-right">
                                    <span>Not due</span>
                                </th>
                                <th class="text-right">
                                    <span t-esc="data['4']['name']"/>
                                </th>
                                <th class="text-right">
                                    <span t-esc="data['3']['name']"/>
                                </th>
                                <th class="text-right">
                                    <span t-esc="data['2']['name']"/>
                                </th>
                                <th class="text-right">
                                    <span t-esc="data['1']['name']"/>
                                </th>
                                <th class="text-right">
                                    <span t-esc="data['0']['name']"/>
                                </th>
                                <th class="text-right">Total</th>
                            </tr>
<!--                            <tr t-if="get_partner_lines">-->
<!--                                <th>Account Total</th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[6]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[4]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[3]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[2]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[1]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[0]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                                <th class="text-right">-->
<!--                                    <span t-esc="get_direction[5]"-->
<!--                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>-->
<!--                                </th>-->
<!--                            </tr>-->
                        </thead>
                        <tbody>
                            <tr t-foreach="get_partner_lines" t-as="partner">
                                <t t-if="partner['name'] == data['partner_ids']">
                                    <td>
                                        <span style="background:white;color:black" t-esc="partner['name']"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['direction']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['4']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['3']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['2']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['1']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span style="background:white;color:black" t-esc="partner['0']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td style="background:white" class="text-right">
                                        <span t-esc="partner['total']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>

                </t>
            </t>
    </t>

    </template>
</odoo>
